pipeline {
    agent any

    environment{
        dockerImage = ''
        registry = 'ketanaggarwal58/mern_task'
        registryCrendential = ''

    }

    stages {

        stage('CheckOut') {
            steps{
                checkout([$class: 'GitSCM', branch: [[name: '*/master']], doGenerateSubmoduleConfrigrations: false, extension: [], submoduleCfg: [], userRemoteConfigs: [[url: 'https://github.com/ketanAggarwal58/mern-task/']]])
            }
        }

        stage('Image Build'){
            steps{
                script{
                    dockerImage = docker.build registry
                }
            }
        }

